<Window x:Class="RichTextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RichTextBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox x:Name="DocumentRtb" AllowDrop="True" PreviewDragLeave="DocumentRtb_DragEvent" Margin="0,41,0,0"/>
        <TextBox x:Name="FilePathTb" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Укажи путь до файла" VerticalAlignment="Top" Width="675" RenderTransformOrigin="0.5,0.5"/>
        <Button Content="Открыть" HorizontalAlignment="Left" Margin="702,10,0,0" VerticalAlignment="Top" Click="OpenFile"/>
    </Grid>
</Window>
